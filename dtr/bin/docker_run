#!/usr/bin/env bash
BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PWD=$(pwd)
source "$BIN"/SET

if docker images | grep -q "${IMAGE}"
then
  echo "Using already built image $IMAGE"
  "$BIN"/docker_stop
else
  "$BIN"/docker_build
fi

echo "Running docker container $IMAGE for application $APPLICATION"
docker run  --env VSAC_API_KEY="$VSAC_API_KEY" --env-file -p 3005:3005 --label "$APPLICATION"  "$IMAGE"