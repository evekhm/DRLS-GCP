#!/usr/bin/env bash
BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PWD=$(pwd)
source "$BIN"/SET

if docker images | grep -q "${IMAGE}"
then
  echo "Using already built image $IMAGE"
else
  "$BIN"/docker_build
fi

"$BIN"/docker_stop

echo "Running docker container $IMAGE for application $APPLICATION"
docker run --rm -p 3005:3005 --env VSAC_API_KEY="$VSAC_API_KEY" --label "$APPLICATION"  "$IMAGE"