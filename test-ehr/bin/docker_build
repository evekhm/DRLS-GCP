#!/usr/bin/env bash
BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PWD=$(pwd)
source "$BIN"/SET

cd "$BIN"/../../../"$APPLICATION" || exit

echo "Building image $IMAGE:$VERSION ..."

rm -rf target
rm -rf build
rm -rf .gradle

docker build -f Dockerfile.dev -t "$IMAGE":"$VERSION" .

echo "Created image $IMAGE:$VERSION ..."

cd "$PWD" || exit