#!/usr/bin/env bash
BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PWD=$(pwd)
print="$BIN/../../shared/print"

source "$BIN"/SET

cd "$BIN"/../../../"$APPLICATION" || exit

$print "Building image $IMAGE:$VERSION ..."

rm -rf target
rm -rf build
rm -rf .gradle

docker build -f Dockerfile.dev -t "$IMAGE":"$VERSION" .

$print "Created image $IMAGE:$VERSION ..." INFO

cd "$PWD" || exit