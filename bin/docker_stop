#!/usr/bin/env bash
BIN="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PWD=$(pwd)

APPLICATION=$1
docker ps --filter label="$APPLICATION"

CID=$(docker ps --filter label="$APPLICATION" --format={{.ID}})
if [ -n "$CID" ]; then
  echo "Stopping $CID ..."
  docker stop "$CID"
  docker ps --filter label="$APPLICATION"
fi