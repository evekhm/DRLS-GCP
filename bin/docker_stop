#!/usr/bin/env bash
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
PWD=$(pwd)
source "$DIR"/SET

docker ps --filter label="$APPLICATION"

CID=$(docker ps --filter label="$APPLICATION" --format={{.ID}})
if [ -n "$CID" ]; then
  echo "Stopping $CID ..."
  docker stop "$CID"
  docker ps --filter label="$APPLICATION"
fi